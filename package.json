{
  "author": "Simon Repp <simon@fdpl.io>",
  "browserslist": [
    "defaults"
  ],
  "dependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "ace-builds": "^1.4.2",
    "enojs": "^0.17.1",
    "fast-glob": "^2.2.4",
    "fs-extra": "^7.0.1",
    "http-server": "^0.11.1",
    "markdown-it": "^8.4.2",
    "markdown-it-prism": "^2.0.1",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.9",
    "parcel-bundler": "^1.11.0",
    "prismjs": "^1.15.0",
    "speakingurl": "^14.0.1"
  },
  "description": "The eno-lang.org website",
  "name": "eno-lang.org",
  "private": true,
  "repository": "https://github.com/eno-lang/eno-lang.org",
  "scripts": {
    "build": "node build.js && npm run styles && npm run language-demos && npm run libraries-demos",
    "deploy": "node deploy.js",
    "language-demos": "parcel build src/demo/language.js --no-cache --no-source-maps --out-dir public --out-file try.js",
    "libraries-demos": "parcel build src/demo/libraries.js --no-cache --no-source-maps --out-dir public --out-file demo.js",
    "release": "npm run build && npm run deploy",
    "serve": "http-server -c-1",
    "styles": "node-sass --output-style compressed src/styles/main.scss public/styles.css",
    "watch": "nodemon --ext css,eno,js,scss --ignore public --exec 'npm run build && npm run serve'"
  }
}
